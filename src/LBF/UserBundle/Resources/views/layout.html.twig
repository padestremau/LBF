                    <div style="display:none;" id="user_type_form">

                      <!-- BEGIN REGISTRATION FORM -->
                      <form class="register-form" action="{{ path('fos_user_registration_register') }}" method="post" {{ form_enctype(form) }} >
                          
                          {% if form_errors(form) %}
                            <div class="error_message">
