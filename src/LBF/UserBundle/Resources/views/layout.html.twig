                    <script type="text/javascript">
                      function showRegisterSelect() {
                          if (document.getElementById('user_type').checked) {
                              document.getElementById('user_type_form').style.display = 'block';
                              document.getElementById('company_type_form').style.display = 'none';
                          }
                          else {
                              document.getElementById('user_type_form').style.display = 'none';
