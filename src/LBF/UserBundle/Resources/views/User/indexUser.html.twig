											<div class="input-icon">
												{% set opt_country = {'attr': {'class': 'form-control select2',
									        		'type':'text', 'id':'country', 'name':'_country'}} %}
									        	{{ form_widget(formEditUser.addressCountry, opt_country) }}
											</div>
										</div>

										<!-- Et pour le reste du formulaire ... ;) -->
										{{ form_widget(formEditUser) }}
										<input type="submit" class="btn btn-login  float-right"
											value="{{'user.actions.save' | trans }}"/>
									</div>
								</form>

							{% else %}

								<!--  - - - - - - - - - - - - - - - - IF COMPANY  - - - - - - - - - - - - - - - - -->
								<form method="post" {{ form_enctype(formEditCompany) }}>
					        		{% if form_errors(formEditCompany) %}
					                    <div class="error_message">
					                      <span class="warning_word">
					                        {{ 'user.warning.warning'|trans }}
					                      </span>
					                      <span class="warning_message">
					                        {{ form_errors(formEditCompany) }}
					                      </span>
					                    </div>
					                    <br/>
					                  {% endif %}
									<div class="row80">
										<div class="form-group">
											<label for="" class="control-label">
												{% set infos_input = 'user.details.infosCompany' | trans %}	
												{{ infos_input }}
											</label>
											{% set companyName_title = 'user.details.companyName' | trans %}
									        {% if form_errors(formEditCompany.companyName) %}
							                    <div class="error_message">
							                      	<span class="warning_word">
							                        	{{ 'user.warning.warning'|trans }}
							                      	</span>
							                      	<span class="warning_message">
							                        	{{ form_errors(formEditCompany.companyName) }}
							                      	</span>
							                    </div>
							                    <br/>
							                {% endif %}
											<div class="input-icon">
