{# src/LBF/UserBundle/Resources/User/indexUser.html.twig #}

{% extends "LBFUserBundle::user_general.html.twig" %}

{% block title %}
  {{ parent() }} - {{ 'user.titles.profile' | trans }}
{% endblock %}

{% block LBF_User_body %}

	<!-- BEGIN CONTENT -->
	<div id="page_content" class="row">

		<div id="sessionFlash" class="sessionFlash">
		</div>

		<div id="fullpage">
			<div class="section section_login section_padding" id="userSection">
				<br/><br/>
				
				<div class="row">
					<div class="col-md-4"></div>

					<div class="col-md-4">
						<h2 class="center">
							{{ 'user.titles.profile'|trans }}
						</h2>
					</div>

					<div class="col-md-4"></div>
				</div>
				<hr/>

				<div role="tabpanel" id="user_panel_parent">

					  <!-- Nav tabs -->
					  <div class="col-md-3 ">
						  <ul class="nav_tabs_user list_no_style_li" role="tablist">
						    <li role="user_tabs" class="active">
						    	<a data-target="#tab_profile" aria-controls="profile" role="tab" data-toggle="tab" class="btn btn-choice">
						    		{{ 'user.details.profile' | trans }}
						    		<div class="float-right inner_arrow">
										<img src="{{ asset('img/system/defaults/info.png') }}" alt="" class="btn_right_arrow"/>
									</div>
						    	</a>
						    </li>
						    <li role="user_tabs" class="">
						    	<a data-target="#tab_edit" aria-controls="edit" role="tab" data-toggle="tab" class="btn btn-choice">
						    		{{ 'user.actions.editInfo' | trans }}
						    		<div class="float-right inner_arrow">
										<img src="{{ asset('img/system/defaults/edit.png') }}" alt="" class="btn_right_arrow"/>
									</div>
						    	</a>
						    </li>
						    <li role="user_tabs" class="">
						    	<a data-target="#tab_password" aria-controls="password" role="tab" data-toggle="tab" class="btn btn-choice">
						    		{{ 'user.actions.changePassword' | trans }}
						    		<div class="float-right inner_arrow">
										<img src="{{ asset('img/system/defaults/password.png') }}" alt="" class="btn_right_arrow"/>
									</div>
						    	</a>
						    </li>
						    <li role="user_tabs" class="">
						    	<a data-target="#tab_avatar" aria-controls="avatar" role="tab" data-toggle="tab" class="btn btn-choice">
						    		{% if app.user.type == 1 %}
										{{ 'user.details.avatar' | trans }}
									{% else %}
										{{ 'user.details.companyLogo' | trans }}
									{% endif %}
						    		<div class="float-right inner_arrow">
										<img src="{{ asset('img/system/defaults/avatar.png') }}" alt="" class="btn_right_arrow"/>
									</div>
						    	</a>
						    </li>
						    <br/>
						    <li role="user_tabs" class="">
						    	<a data-target="#tab_current" aria-controls="current" role="tab" data-toggle="tab" class="btn btn-choice">
						    		{{ 'user.details.currentOrders' | trans }} ({{ currentOrders|length }})
						    		<div class="float-right inner_arrow">
										<img src="{{ asset('img/system/defaults/currentOrders.png') }}" alt="" class="btn_right_arrow"/>
									</div>
						    	</a>
						    </li>
						    <li role="user_tabs" class="">
						    	<a data-target="#tab_past" aria-controls="past" role="tab" data-toggle="tab" class="btn btn-choice">
						    		{{ 'user.details.pastOrders' | trans }} ({{ pastOrders|length }})
						    		<div class="float-right inner_arrow">
										<img src="{{ asset('img/system/defaults/pastOrders.png') }}" alt="" class="btn_right_arrow"/>
									</div>
						    	</a>
						    </li>
						    <br/>
						    <li role="user_tabs" class="">
						    	<a href="{{ path('fos_user_security_logout') }}" class="btn btn-choice logout-btn">
						    		{{ 'user.actions.logout' | trans }}
						    		<div class="float-right inner_arrow">
										<img src="{{ asset('img/system/defaults/logout.png') }}" alt="" class="btn_right_arrow"/>
									</div>
						    	</a>
						    </li>
						  </ul>
					  </div>

				  	<!-- Tab panes -->
				  	<div class="col-md-9 tab-content" id="user_panel">
				    	<div role="tabpanel" class="tab-pane fade nav active in" id="tab_profile">
				    		<div class="col-md-9">
								<div class="row">
									<div class="col-md-5 right">
										<ul class="list_no_style_li">
											{% if app.user.type == 1 %}
											<li class="bold">
												{{ 'user.details.firstName'|trans }}
											</li>
											<li class="bold">
												{{ 'user.details.lastName'|trans }}
											</li>
											<li class="bold">
												{{ 'user.details.gender'|trans }}
											</li>
											<li class="bold">
												{{ 'user.details.age'|trans }}
											</li>
											{% else %}
											<li class="bold">
												{{ 'user.details.companyName'|trans }}
											</li>
											<li class="bold">
												{{ 'user.details.RUCnumber'|trans }}
											</li>
											{% endif %}
											<li class="bold">
												{{ 'user.details.email'|trans }}
											</li>
											<li class="bold">
												{{ 'user.details.tel'|trans }}
											</li>
											<li class="bold">
												{{ 'user.details.address'|trans }}
											</li>
											<li class="bold">
												<br/>
											</li>
										</ul>
									</div>
									<div class="col-md-7 left">
										<ul class="list_no_style_li">
											{% if app.user.type == 1 %}
											<li>
												{% if app.user.firstName|length > 0 %}
													{{ app.user.firstName }}
												{% else %}
													<br/>
												{% endif %}
											</li>
											<li>
												{% if app.user.lastName|length > 0 %}
													{{ app.user.lastName }}
												{% else %}
													<br/>
												{% endif %}
											</li>
											<li>
												{% if app.user.gender|length > 0 %}
													{% if app.user.gender == 1 %}
														{{ 'user.details.male'|trans }}
													{% else %}
														{{ 'user.details.female'|trans }}
													{% endif %}
												{% else %}
													<br/>
												{% endif %}
											</li>
											<li>
												{% if app.user.age|length > 0 %}
													{{ app.user.age }}
												{% else %}
													<br/>
												{% endif %}
											</li>
											{% else %}
											<li>
												{% if app.user.companyName|length > 0 %}
													<strong>{{ app.user.companyName }}</strong>
												{% else %}
													<br/>
												{% endif %}
											</li>
											<li>
												{% if app.user.RUCnumber|length > 0 %}
													{{ app.user.RUCnumber }}
												{% else %}
													<br/>
												{% endif %}
											</li>
											{% endif %}
											<li>
												{% if app.user.email|length > 0 %}
													<a href="mailto:{{ app.user.email }}">{{ app.user.email }}</a>
												{% else %}
													<br/>
												{% endif %}
											</li>
											<li>
												{% if app.user.tel|length > 0 %}
													{{ app.user.tel }}
												{% else %}
													<br/>
												{% endif %}
											</li>
											<li>
												{% if app.user.addressNumber|length > 0 or app.user.addressStreet|length > 0 %}
													{{ app.user.addressNumber }}, {{ app.user.addressStreet }}
												{% else %}
													<br/>
												{% endif %}
											</li>
											<li>
												{% if app.user.addressPostCode|length > 0 or app.user.addressCity|length > 0 %}
													{{ app.user.addressPostCode }}  {{ app.user.addressCity }}
												{% else %}
													<br/>
												{% endif %}
											</li>
											<li>
												{% if app.user.addressCountry|length > 0 %}
													{{ app.user.addressCountry }}
												{% else %}
													<br/>
												{% endif %}
											</li>											
										</ul>
									</div>
								</div>

							</div>
							<div class="col-md-3">
								{% if app.user.alt|length > 0  and app.user.url|length > 0 %}
									<div class="user_img" style="width: 100%; background-image: url('{{ asset( app.user.webPath) }}'); background-size: cover; background-position: 50%;">
										<!-- onClick="showPhoto('{{ app.user.id }}')" -->
										<script type="text/javascript">
											var cw = $('.user_img').width();
											$('.user_img').css({'height':cw+'px'});
										</script>
									</div>
								{% else %}
									<img src="{{ asset('img/system/defaults/default_profile.png') }}" alt="Default" class="user_img"/>
										<script type="text/javascript">
											var cw = $('.user_img').width();
											$('.user_img').css({'height':cw+'px'});
										</script>
								{% endif %}
							</div>
				    	</div>
				    	<div role="tabpanel" class="tab-pane fade" id="tab_password">
				    		{{ 'user.actions.toChangePassword' | trans }}
				    		<br/><br/><br/>
				    		<div class="center">
								<a href="{{ path('fos_user_change_password') }}" class="btn btn-login">
							    	{{ 'user.actions.changePassword'|trans }}
							    </a>
				    		</div>
				    	</div>
				    	<div role="tabpanel" class="tab-pane fade" id="tab_avatar">
							<form method="post" action="{{ path('lbf_user_homepage') }}" {{ form_enctype(formEditAvatar) }}>
								<div class="edit_profile">
									<div class="row">
										{% if app.user.type == 1 %}
											{{ 'user.actions.changeAvatar' | trans }}
										{% else %}
											{{ 'user.actions.changeCompanyLogo' | trans }}
										{% endif %}
									</div>

									<div class="form-group row">
										{% set name_title = 'user.details.changeAvatar' | trans %}
										{{ form_errors(formEditAvatar) }}
										<div class="input-icon">
								        	{{ form_widget(formEditAvatar.file) }}
								        </div>
									</div>

									<div class="center">
										<br/><br/>
										<input type="submit" class="btn btn-login validate_button" value="{{'user.actions.save' | trans }}"/>
									</div>
								</div>

								<!-- Le reste du formulaire :) -->
								{{ form_widget(formEditAvatar) }}
							</form>
				    	</div>
				    	<div role="tabpanel" class="tab-pane fade" id="tab_edit">
				    		{{ 'user.actions.editYourInfos'|trans }}
				    		<br/><br/>

				    		{% if app.user.type == 1 %}

				    			<!--  - - - - - - - - - - - - - - - - IF USER  - - - - - - - - - - - - - - - - -->
								<form method="post" {{ form_enctype(formEditUser) }}>
					        		{% if form_errors(formEditUser) %}
					                    <div class="error_message">
					                      <span class="warning_word">
					                        {{ 'user.warning.warning'|trans }}
					                      </span>
					                      <span class="warning_message">
					                        {{ form_errors(formEditUser) }}
					                      </span>
					                    </div>
					                    <br/>
					                  {% endif %}
									<div class="row80">
										<div class="form-group">
											<label for="" class="control-label">
												{% set infos_input = 'user.details.infos' | trans %}	
												{{ infos_input }}
											</label>
											{% set firstName_title = 'user.details.firstName' | trans %}
									        {% if form_errors(formEditUser.firstName) %}
							                    <div class="error_message">
							                      	<span class="warning_word">
							                        	{{ 'user.warning.warning'|trans }}
							                      	</span>
							                      	<span class="warning_message">
							                        	{{ form_errors(formEditUser.firstName) }}
							                      	</span>
							                    </div>
							                    <br/>
							                {% endif %}
											<div class="input-icon">
									        	{% set opt_firstname = {'attr': {'class': 'form-control placeholder-no-fix',
									        		'type':'text', 'placeholder':firstName_title, 'value':app.user.firstName, 'id':'firstName', 
									        		'name':'_firstName'}} %}
									        	{{ form_widget(formEditUser.firstName, opt_firstname) }}
									        </div>
										</div>
										<div class="form-group">
											{% set lastName_title = 'user.details.lastName' | trans %}
									        {% if form_errors(formEditUser.lastName) %}
							                    <div class="error_message">
							                      	<span class="warning_word">
							                        	{{ 'user.warning.warning'|trans }}
							                      	</span>
							                      	<span class="warning_message">
							                        	{{ form_errors(formEditUser.lastName) }}
							                      	</span>
							                    </div>
							                    <br/>
							                {% endif %}
											<div class="input-icon">
									        	{% set opt_lastname = {'attr': {'class': 'form-control placeholder-no-fix',
									        		'type':'text', 'placeholder':lastName_title, 'value':app.user.lastName, 'id':'lastName', 
									        		'name':'_lastName'}} %}
									        	{{ form_widget(formEditUser.lastName, opt_lastname) }}
									        </div>
										</div>
										<div class="form-group">
											{% set email_title = 'user.details.email' | trans %}
									        {% if form_errors(formEditUser.email) %}
							                    <div class="error_message">
							                      	<span class="warning_word">
							                        	{{ 'user.warning.warning'|trans }}
							                      	</span>
							                      	<span class="warning_message">
							                        	{{ form_errors(formEditUser.email) }}
							                      	</span>
							                    </div>
							                    <br/>
							                {% endif %}
											<div class="input-icon">
									        	{% set opt_email = {'attr': {'class': 'form-control placeholder-no-fix',
									        		'type':'text', 'placeholder':email_title, 'value':app.user.email, 'id':'email', 
									        		'name':'_email', 'required':'required'}} %}
									        	{{ form_widget(formEditUser.email, opt_email) }}
									        </div>
										</div>
										<div class="form-group">
											{% set gender_title = 'user.details.gender' | trans %}
									        {% if form_errors(formEditUser.gender) %}
							                    <div class="error_message">
							                      	<span class="warning_word">
							                        	{{ 'user.warning.warning'|trans }}
							                      	</span>
							                      	<span class="warning_message">
							                        	{{ form_errors(formEditUser.gender) }}
							                      	</span>
							                    </div>
							                    <br/>
							                {% endif %}
											<div class="input-icon">
									        	{% set opt_gender = {'attr': {'class': 'form-control select2',
									        		'type':'text', 'id':'gender', 'name':'_gender'}} %}
									        	{{ form_widget(formEditUser.gender, opt_gender) }}
									        </div>
										</div>
										<div class="form-group">
								        	{% set age_title = 'user.details.age' | trans %}
											{% if form_errors(formEditUser.age) %}
							                    <div class="error_message">
							                      	<span class="warning_word">
							                        	{{ 'user.warning.warning'|trans }}
							                      	</span>
							                      	<span class="warning_message">
							                        	{{ form_errors(formEditUser.age) }}
							                      	</span>
							                    </div>
							                    <br/>
							                {% endif %}
											<div class="input-icon">
												{% set opt_age = {'attr': {'class': 'form-control select2',
									        		'type':'text', 'id':'age', 'name':'_age'}} %}
									        	{{ form_widget(formEditUser.age, opt_age) }}
											</div>
										</div>
										<div class="form-group">
											{% set tel_title = 'user.details.tel' | trans %}
									        {% if form_errors(formEditUser.tel) %}
							                    <div class="error_message">
							                      	<span class="warning_word">
							                        	{{ 'user.warning.warning'|trans }}
							                      	</span>
							                      	<span class="warning_message">
							                        	{{ form_errors(formEditUser.tel) }}
							                      	</span>
							                    </div>
							                    <br/>
							                {% endif %}
											<div class="input-icon">
									        	{% set opt_tel = {'attr': {'class': 'form-control placeholder-no-fix',
									        		'type':'text', 'placeholder':tel_title, 'value':app.user.tel, 'id':'tel', 
									        		'name':'_tel'}} %}
									        	{{ form_widget(formEditUser.tel, opt_tel) }}
									        </div>
										</div>
										<div class="form-group">
											{% set addressNumber_title = 'user.details.address' | trans %}
									        {{ form_label(formEditUser.addressNumber, addressNumber_title, 
									        	{'label_attr': {'class': 'control-label'}}) }}
									        {% if form_errors(formEditUser.addressNumber) %}
							                    <div class="error_message">
							                      	<span class="warning_word">
							                        	{{ 'user.warning.warning'|trans }}
							                      	</span>
							                      	<span class="warning_message">
							                        	{{ form_errors(formEditUser.addressNumber) }}
							                      	</span>
							                    </div>
							                    <br/>
							                {% endif %}
											<div class="input-icon">
									        	{% set opt_addressNumber = {'attr': {'class': 'form-control placeholder-no-fix',
									        		'type':'text', 'placeholder':'C-19', 'value':app.user.addressNumber, 'id':'addressNumber', 
									        		'name':'_addressNumber'}} %}
									        	{{ form_widget(formEditUser.addressNumber, opt_addressNumber) }}
									        </div>
										</div>
										<div class="form-group">
											{% set addressStreet_title = 'user.details.address' | trans %}
									        {# form_label(formEditUser.addressStreet, addressStreet_title, 
									        	{'label_attr': {'class': 'control-label'}}) #}
									        {% if form_errors(formEditUser.addressStreet) %}
							                    <div class="error_message">
							                      	<span class="warning_word">
							                        	{{ 'user.warning.warning'|trans }}
							                      	</span>
							                      	<span class="warning_message">
							                        	{{ form_errors(formEditUser.addressStreet) }}
							                      	</span>
							                    </div>
							                    <br/>
							                {% endif %}
											<div class="input-icon">
									        	{% set opt_addressStreet = {'attr': {'class': 'form-control placeholder-no-fix',
									        		'type':'text', 'placeholder':'Calle de las Orquideas', 'value':app.user.addressStreet, 'id':'addressStreet', 
									        		'name':'_addressStreet'}} %}
									        	{{ form_widget(formEditUser.addressStreet, opt_addressStreet) }}
									        </div>
										</div>
										<div class="form-group">
											{% set addressPostCode_title = 'user.details.address' | trans %}
									        {# form_label(formEditUser.addressPostCode, addressPostCode_title, {'label_attr': {'class': 'control-label'}}) #}
									        {% if form_errors(formEditUser.addressPostCode) %}
							                    <div class="error_message">
							                      	<span class="warning_word">
							                        	{{ 'user.warning.warning'|trans }}
							                      	</span>
							                      	<span class="warning_message">
							                        	{{ form_errors(formEditUser.addressPostCode) }}
							                      	</span>
							                    </div>
							                    <br/>
							                {% endif %}
											<div class="input-icon">
									        	{% set opt_addressPostCode = {'attr': {'class': 'form-control placeholder-no-fix',
									        		'type':'text', 'placeholder':'08056', 'value':app.user.addressPostCode, 'id':'addressPostCode', 
									        		'name':'_addressPostCode'}} %}
									        	{{ form_widget(formEditUser.addressPostCode, opt_addressPostCode) }}
									        </div>
										</div>
										<div class="form-group">
											{% set addressCity_title = 'user.details.address' | trans %}
									        {# form_label(formEditUser.addressCity, addressCity_title, 
									        	{'label_attr': {'class': 'control-label'}}) #}
									        {% if form_errors(formEditUser.addressCity) %}
							                    <div class="error_message">
							                      	<span class="warning_word">
							                        	{{ 'user.warning.warning'|trans }}
							                      	</span>
							                      	<span class="warning_message">
							                        	{{ form_errors(formEditUser.addressCity) }}
							                      	</span>
							                    </div>
							                    <br/>
							                {% endif %}
											<div class="input-icon">
									        	{% set opt_addressCity = {'attr': {'class': 'form-control placeholder-no-fix',
									        		'type':'text', 'placeholder':'Cusco', 'value':app.user.addressCity, 'id':'addressCity', 
									        		'name':'_addressCity'}} %}
									        	{{ form_widget(formEditUser.addressCity, opt_addressCity) }}
									        </div>
										</div>
										<div class="form-group">
								        	{% set country_title = 'user.details.country' | trans %}
											{# form_label(formEditUser.addressCountry, country_title, 
												{'label_attr': {'class': 'control-label'}}) #}
											{% if form_errors(formEditUser.addressCountry) %}
							                    <div class="error_message">
							                      	<span class="warning_word">
							                        	{{ 'user.warning.warning'|trans }}
							                      	</span>
							                      	<span class="warning_message">
							                        	{{ form_errors(formEditUser.addressCountry) }}
							                      	</span>
							                    </div>
							                    <br/>
