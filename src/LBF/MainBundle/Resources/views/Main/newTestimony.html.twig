{# src/LBF/MainBundle/Resources/Main/indexMain.html.twig #}

{% extends "LBFMainBundle::main_general.html.twig" %}

{% block title %}
  {{ parent() }}
{% endblock %}

{% block LBF_Main_body %}

	<!-- BEGIN CONTENT -->
	<div id="page_content" class="row">

		<div id="sessionFlash" class="sessionFlash">
		</div>

		<div id="fullpage">
			<div class="section row" id="mainSection">
				<div class="row">

					<br/><br/><br/><br/>

					<div class="row80">
						<h3 class="center">
							{{ 'testimony.titles.testimony'|trans }}
						</h3>
						<p class="left">
							{{ 'testimony.content.testimony'|trans }}
						</p>
						<br/>
						<p class="center">
							<strong>
								{{ 'testimony.content.team'|trans }}
							</strong>
						</p>
					</div>

					<br/><br/>

			  		<div class="row80">
			  			<form method="post" {{ form_enctype(formNewTestimony) }}>
			        		{% if form_errors(formNewTestimony) %}
			                    <div class="error_message">
			                      <span class="warning_word">
			                        {{ 'user.warning.warning'|trans }}
			                      </span>
			                      <span class="warning_message">
			                        {{ form_errors(formNewTestimony) }}
			                      </span>
			                    </div>
			                    <br/>
			                {% endif %}

			                <div class="row">
			                	
				  				<strong>
				  					{{ 'testimony.titles.author'|trans }}
				  				</strong>
				  				<hr/>
								<div class="form-group col-lg-12 col-md-12 col-sm-12 col-xs-12">
							        {% if form_errors(formNewTestimony.author) %}
					                    <div class="error_message">
					                      	<span class="warning_word">
					                        	{{ 'user.warning.warning'|trans }}
					                      	</span>
					                      	<span class="warning_message">
					                        	{{ form_errors(formNewTestimony.author) }}
					                      	</span>
					                    </div>
					                    <br/>
					                {% endif %}
					                {% set testimony_name = 'testimony.content.namePlaceholder' | trans %}
									<div class="input-icon">
							        	{% set opt_author = {'attr': {'class': 'form-control placeholder-no-fix',
							        		'type':'text', 'placeholder': testimony_name, 'id':'author', 
							        		'name':'_author'}} %}
							        	{{ form_widget(formNewTestimony.author, opt_author) }}
							        </div>
								</div>

							</div>

			                <div class="row">
			                	
				  				<strong>
				  					{{ 'testimony.titles.content'|trans }}
				  				</strong>
				  				<hr/>
								<div class="form-group col-lg-12 col-md-12 col-sm-12 col-xs-12">
							        {% if form_errors(formNewTestimony.content) %}
					                    <div class="error_message">
					                      	<span class="warning_word">
					                        	{{ 'user.warning.warning'|trans }}
					                      	</span>
					                      	<span class="warning_message">
					                        	{{ form_errors(formNewTestimony.content) }}
					                      	</span>
					                    </div>
					                    <br/>
					                {% endif %}
					                {% set testimony_content = 'testimony.content.contentPlaceholder' | trans %}
									<div class="input-icon">
							        	{% set opt_content = {'attr': {'class': 'form-control placeholder-no-fix',
							        		'type':'textarea', 'placeholder': testimony_content, 'id':'content', 'name':'_content'}} %}
							        	{{ form_widget(formNewTestimony.content, opt_content) }}
							        </div>
								</div>

							</div>

							<div class="row">

								<strong>
									{{ 'testimony.titles.evaluationNote'|trans }} <strong>{{ 'testimony.titles.LBF'|trans }}</strong>
								</strong>
								<hr/>
								<div class="form-group col-lg-6 col-md-6 col-sm-6 col-xs-12">

									{{ 'testimony.content.evaluation'|trans }}

							        {% if form_errors(formNewTestimony.rate) %}
					                    <div class="error_message">
					                      	<span class="warning_word">
					                        	{{ 'user.warning.warning'|trans }}
					                      	</span>
					                      	<span class="warning_message">
					                        	{{ form_errors(formNewTestimony.rate) }}
					                      	</span>
					                    </div>
					                    <br/>
					                {% endif %}
									<script type="text/javascript">
									$(document).ready(function(){
									//  Check Radio-box
									    $(".rating input:radio").attr("checked", false);
									    $('.rating input').click(function () {
									        $(".rating span").removeClass('checked');
									        $(this).parent().addClass('checked');
									    });
									});
									</script>
									<div class="input-icon">
							        	<div class="center rating">
							        	{% for child in formNewTestimony.rate %}
							        		<span>
											   {{ form_widget(child) }}{{ form_label(child) }}
							        		</span>
										{% endfor %}
							        	</div>
							        </div>
								</div>
							</div>

							
							<!-- Et pour le reste du formulaire ... ;) -->
							{{ form_widget(formNewTestimony) }}

							<div class="center">
								<input type="submit" class="btn btn-login" value="{{ 'testimony.action.save'|trans }}"/>
							</div>
							<br/><br/><br/>
						</form>
			  		</div>
				</div>

				<br/><br/><br/>
			</div>
		</div>
	</div>
	<!-- END CONTENT -->

{% endblock LBF_Main_body %}