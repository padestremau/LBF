<!-- Modals for "more info" -->

<script type="text/javascript">
  

  function goToWithoutModal(path) {
    $('#qualityModal').modal('hide');
    window.location = path;
  }
</script>

<!-- 1. Quality -->
<div class="modal bs-example-modal-lg fade" id="qualityModal" tabindex="-1" role="dialog" aria-labelledby="qualityModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close white" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h2 class="modal-title center" id="qualityModalLabel">
          {{ 'main.titles.qualityProduct' | trans }}
        </h2>
      </div>
      <div class="modal-body">
        <div class="modal-body-inner">
          {{ 'modal.modalQuality.intro' | trans }}
          <ul>
            <li>
              {{ 'modal.modalQuality.quote1' | trans }}
            </li>
            <li>
              {{ 'modal.modalQuality.quote2' | trans }}
            </li>
            <li>
              {{ 'modal.modalQuality.quote3' | trans }}
            </li>
          </ul>
          {{ 'modal.modalQuality.dontWait' | trans }} <a href="javascript:goToWithoutModal('{{ path('lbf_main_homepage') }}#ourProducts')" ><strong> 
          {{ 'modal.modalQuality.products' | trans }} </strong></a> 
          {{ 'modal.modalQuality.thanksTo' | trans }} <a href="javascript:goToWithoutModal('{{ path('lbf_main_homepage') }}#ourRecipes')" ><strong> {{ 'modal.modalQuality.recipes' | trans }} </strong></a> 
          {{ 'modal.modalQuality.tested' | trans }}
        </div>
      </div>
      <div class="modal-footer padding0">
        <button type="button" class="btn btn-modal" data-dismiss="modal">
          {{ 'modal.actions.close' | trans }}
        </button>
      </div>
    </div>
  </div>
</div>


<!-- 2. Reservation -->
<div class="modal bs-example-modal-lg fade" id="reservationModal" tabindex="-1" role="dialog" aria-labelledby="reservationModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close white" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h2 class="modal-title center" id="reservationModalLabel">
          {{ 'main.titles.reservation' | trans }}
        </h2>
      </div>
      <div class="modal-body">
        <div class="modal-body-inner">
          {{ 'modal.modalReservation.intro' | trans }}
          <ol>
            <li>
              {{ 'modal.modalReservation.quote1' | trans }}
            </li>
            <li>
              {{ 'modal.modalReservation.quote2' | trans }} *
            </li>
            <li>
              {{ 'modal.modalReservation.quote3' | trans }}
            </li>
            <li>
              {{ 'modal.modalReservation.quote4' | trans }}
            </li>
            <li>
              {{ 'modal.modalReservation.quote5' | trans }}
            </li>
            <li>
              {{ 'modal.modalReservation.quote6' | trans }}
              <br/>
              <br class="hidden-xs"/>
              <div class="address_box">
                <span style="font-size:1.2em;">
                  <strong>Le Buffet Francés</strong> 
                </span>
                <br/>
