<!-- Modals for "more info" -->

{% set current_language = '' %}
{% if (app.request.get('_route_params')) != null %}
  {% if (app.request.get('_route_params')._locale == 'fr') %}
    {% set current_language = 'fr' %}
  {% elseif (app.request.get('_route_params')._locale == 'en') %}
    {% set current_language = 'en' %}
  {% else %}
    {% set current_language = 'es' %}
  {% endif %}
{% endif %}


<script type="text/javascript">
  

  function goToWithoutModal(path) {
    $('#qualityModal').modal('hide');
    window.location = path;
  }
</script>

<!-- 1. Quality -->
<div class="modal bs-example-modal-lg fade" id="qualityModal" tabindex="-1" role="dialog" aria-labelledby="qualityModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close white" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h2 class="modal-title center">
          {% set pageQualite = '' %}
          {% if pages|length > 0 %}
            {% for page in pages %}
              {% if page.dataBaseName == 'Qualite_Principal' %}
                {% set pageQualite = page %}
              {% endif %}
            {% endfor %}
          {% endif %}
          {% if current_language %}
            {% if current_language == 'fr' and pageQualite.headerFr|length > 0 %}
              {{ pageQualite.headerFr }}
            {% elseif current_language == 'en' and pageQualite.headerEn|length > 0 %}
              {{ pageQualite.headerEn }} 
            {% else %}
              {{ pageQualite.headerEs }}
            {% endif %}
          {% else %}
            {{ pageQualite.headerEs }}
          {% endif %}
        </h2>
      </div>
      <div class="modal-body">
        <div class="modal-body-inner">
          {% if current_language %}
            {% if current_language == 'fr' and pageQualite.contentFr|length > 0 %}
              {{ pageQualite.contentFr|raw }}
            {% elseif current_language == 'en' and pageQualite.contentEn|length > 0 %}
              {{ pageQualite.contentEn|raw }} 
            {% else %}
              {{ pageQualite.contentEs|raw }}
            {% endif %}
          {% else %}
            {{ pageQualite.contentEs|raw }}
          {% endif %}
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-modal" data-dismiss="modal">
          {{ 'modal.actions.close' | trans }}
        </button>
      </div>
    </div>
  </div>
</div>


