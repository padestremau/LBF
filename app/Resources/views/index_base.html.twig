{# app/Resources/views/index_base.html.twig #}

{# For clearer view #}
{% set route = app.request.attributes.get( '_route' ) %}

<!DOCTYPE html>

<!-- BEGIN HEAD -->
<head id="website_head">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>
      {% block title %}
        Le Buffet Frances
      {% endblock %}
    </title>

    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1" name="viewport"/>
    <meta content="Pierre-Arnaud Destremau" name="author"/>
    <meta content="Le Buffet Francés" name="title"/>
    <meta content="Sitio web del Buffet Francés. Tienda en D-21, calle los Sauces, Larapa, Cusco, Peru. Ven a descubrir nuestros productos de las 9am a las 7pm." name="description"/>
    <meta content="http://www.lebuffetfrances.com{{ asset('img/system/logo/logo-300x300.png') }}" name="image"/>

    <!-- Facebook -->
    <meta property="og:title" content="Le Buffet Francés"/>
    <meta property="og:type" content="website"/>
    <meta property="og:image" content="http://www.lebuffetfrances.com{{ asset('img/system/logo/logo-300x300.png') }}"/>
    <meta property="og:url" content="http://www.lebuffetfrances.com/"/>
    <meta property="og:description" content="Sitio web del Buffet Francés. Tienda en D-21, calle los Sauces, Larapa, Cusco, Peru. Ven a descubrir nuestros productos de las 9am a las 7pm."/>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.9.1/jquery-ui.min.js"></script>

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">

    <!-- Optional theme -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap-theme.min.css">

    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>

    {% stylesheets

      'css/font.css'
      'css/main_style.css'

      'redactor/redactor.css'

      'bundles/stpredactor/css/sonata.css'
      filter='cssrewrite' %}
      <link rel="stylesheet" href="{{ asset_url }}" type="text/css" media="screen"/>
    {% endstylesheets %}
    
    {% javascripts 
      'redactor/redactor.js'
      'redactor/fullscreen.js'
      'redactor/fr.js'
      'bundles/lbfredactor/js/script.js'
      %}
      <script type="text/javascript" src="{{ asset_url }}"> </script>
    {% endjavascripts %}
        


</head>
<!-- END HEAD -->

<!-- BEGIN BODY -->
  <body onLoad="
      {% if route == 'lbf_main_confirm' %}
        onLoadDataSpecial()
      {% else %}
        onLoadData()
      {% endif %}
      ">
        <!-- BEGIN header -->
          {% include 'includes/header.html.twig' %}
        <!-- END header -->
        
        <!-- BEGIN modals -->
          {% include 'includes/modals.html.twig' %}
        <!-- END modals -->

        <!-- BEGIN button to top -->
          {% include 'includes/button_to_top.html.twig' %}
        <!-- END button to top -->

        <!-- BEGIN button to top -->
          {% include 'includes/button_on_side.html.twig' %}
        <!-- END button to top -->
        
        <!-- BEGIN CONTAINER -->
        <div id="page_container_gen" class="
          {% if route != 'lbf_admin_homepage' 
            and route != 'lbf_admin_currentOrders'
            and route != 'lbf_admin_currentOrders_sorted'
            and route != 'lbf_admin_answer'
            and route != 'lbf_admin_delete'
            and route != 'lbf_admin_complete'
            and route != 'lbf_admin_pastOrders'
            and route != 'lbf_admin_users'
            and route != 'lbf_admin_users_sorted'
            and route != 'lbf_admin_edit_user'
            and route != 'lbf_admin_usersEmails'
            and route != 'lbf_admin_companies'
            and route != 'lbf_admin_companies_sorted'
            and route != 'lbf_admin_edit_company'
            and route != 'lbf_admin_companiesEmails'
            and route != 'lbf_admin_newsletter'
            and route != 'lbf_admin_emails_sorted'
            and route != 'lbf_admin_newsletterEmails'
            and route != 'lbf_admin_edit_email'
            and route != 'lbf_admin_comments'
            and route != 'lbf_admin_comments_sorted'
            and route != 'lbf_admin_new_comment'
            and route != 'lbf_admin_edit_comment'
            and route != 'lbf_admin_delete_comment'
            and route != 'lbf_admin_elements'
            and route != 'lbf_admin_elements_sorted'
            and route != 'lbf_admin_new_element'
            and route != 'lbf_admin_edit_element'
            and route != 'lbf_admin_recipes'
            and route != 'lbf_admin_recipes_sorted'
            and route != 'lbf_admin_new_recipe'
            and route != 'lbf_admin_edit_recipe' 
            and route != 'lbf_admin_newsletterEmailsSpe' %}
            page-container 
          {% else %}
            page-container-admin
          {% endif %}
          row margin0">
            {% block body %}
            {% endblock body %}  
        </div>
        <!-- END CONTAINER -->


        <!-- BEGIN JAVASCRIPTS(Load javascripts at bottom, this will reduce page load time) -->
        {% javascripts 
          'js/javascripts_lbf.js'
          'js/ajax_load.js'
          
          'js/jssor.js'
          'js/jssor.slider.js'

          'js/jquery-cookie/jquery.cookie.js'
          %}
          <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
        <!-- END JAVASCRIPTS -->
  </body>
  <!-- END BODY -->
</html>